<%- include('../partials/header.ejs', { title: 'Login' }) %>

<div class="container" style="max-width: 500px;">
    <h1>Login</h1>

    <% if (typeof error !== 'undefined') { %>
        <p style="color: red;">Error: <%= error %></p>
    <% } %>

    <form action="/auth/login" method="POST">
        <input type="hidden" name="redirect" value="<%= typeof redirect !== 'undefined' ? redirect : '/students' %>">

        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>

        <button type="submit">Log In</button>
    </form>
    <p style="margin-top: 20px;">Don't have an account? <a href="/auth/register">Register here</a>.</p>
</div>

<%- include('../partials/footer.ejs') %>